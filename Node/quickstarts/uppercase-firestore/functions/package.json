{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.4.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.40.0",
    "mocha": "^7.2.0",
    "sinon": "^9.2.4"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint --max-warnings=0 .",
