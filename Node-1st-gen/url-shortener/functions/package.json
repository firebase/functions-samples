{
  "name": "url-shortener-functions",
  "description": "URL Shortener Firebase Functions sample",
  "dependencies": {
    "bitly": "^6.1.0",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4.1"
  },
  "devDependencies": {
    "eslint": "^8.40.0"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint --max-warnings=0 .",
