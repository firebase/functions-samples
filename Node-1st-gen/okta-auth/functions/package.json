    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-plugin-promise": "^7.2.1",
    "express": "^4.17.1",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "firebase-functions-test": "^3.4.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.30.1"
  },
