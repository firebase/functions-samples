    "react": "15.5.4",
    "react-dom": "15.5.4",
    "request": "2.81.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.0.5"
  },
  "devDependencies": {
    "eslint": "^4.13.1",
